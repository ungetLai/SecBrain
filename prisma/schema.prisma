generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum NoteStatus {
  Backlog
  Failed
  Done
  Archive
}

model Note {
  id        String     @id @default(cuid())
  createdAt DateTime   @default(now())
  content   String
  markdown  String?
  status    NoteStatus @default(Backlog)
}
